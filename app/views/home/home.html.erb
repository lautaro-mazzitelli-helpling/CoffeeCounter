<div class="center jumbotron">

  <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <% if @buyer.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p>Whops! <%= pluralize(@buyer.errors.count, "problem") %> when saving the new buyer:</p>
      <ul>
        <% @buyer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <table class="table table-striped">
    <thead>
    <tr>
      <th>Rank #</th>
      <th>Name</th>
      <th>Coffee Boxes</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% rank = 0 %>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= rank += 1 %></td>
        <td><%= buyer.name %></td>
        <td><%= buyer.amount %></td>
        <td>
          <%= button_tag "+", class: "btn btn-small btn-primary", "data-toggle" => "modal", "data-target" => "#myModal", "data-id" => buyer.id %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p class="text-right">
    <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      + Buyer
    </a>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="well text-right">

      <%= form_for @buyer, :html => {:class => "form-inline"} do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control", :id => "form-name", :placeholder => "Jane Doe" %>
          <%= f.submit :class => "btn btn-default", :value => "Add" %>
        </div>
      <% end %>

    </div>
  </div>


</div>

<div id="myModal" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Confirm</h4>
      </div>
      <div class="modal-body">
        <p>Do you want to buy a box of coffee?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="btn-buy-coffee">Buy!</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

