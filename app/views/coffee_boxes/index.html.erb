<p id="notice"><%= notice %></p>

<h1>Listing Coffee Boxes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coffee_boxes.each do |coffee_box| %>
      <tr>
        <td><%= coffee_box.date %></td>
        <td><%= coffee_box.user %></td>
        <td><%= link_to 'Show', coffee_box %></td>
        <td><%= link_to 'Edit', edit_coffee_box_path(coffee_box) %></td>
        <td><%= link_to 'Destroy', coffee_box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

